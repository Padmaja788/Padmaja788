#include <stdio.h>
#include<string.h>
void main()
{
    char a[100];
    int count=0,i;
    printf("enter the sentence:");
    fgets(a);
    for(i=0;i<strlen(a);i++)
    {
        if(a[i]==' ' && a[i+1]!=' ')
        {
            count+=1;
        }
    }
    printf("The no of words are %d", count+1);
    
}
